// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "airbnb",
  "globals": {
    "angular": true,
    "document": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "."
        ]
      }
    }
  },
  "rules": {
    "linebreak-style": "off",
    "max-len": ["error", 150],
    "no-use-before-define": ["error", {"functions": false}],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
